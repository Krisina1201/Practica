<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demochka.TicketWindow"
		x:CompileBindings="False"
        Title="Мои билеты">
    <DockPanel>
        <Grid ColumnDefinitions="*" RowDefinitions="Auto, *" Margin="10">
            <TextBlock Grid.Row="0" Text="Купленные билеты" HorizontalAlignment="Center" 
                      FontWeight="Bold" FontSize="20" Margin="5"/>
            
            <ListBox Grid.Row="1" x:Name="TicketListBox" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                BorderBrush="#e0e0e0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="10,5"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding FromCity}" FontSize="18" FontWeight="Bold" Foreground="#2c3e50"/>
                                    <TextBlock Text=" → " FontSize="18" FontWeight="Bold" Margin="10,0" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding ToCity}" FontSize="18" FontWeight="Bold" Foreground="#2c3e50"/>
                                    <TextBlock Text=" • " Margin="10,0" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding Airline}" FontSize="14" Foreground="#34495e" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,5">
                                    <TextBlock Text="Вылет" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding DepartureTime}" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DateFromFly}" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding FromAiroport}" FontSize="12" Foreground="#7f8c8d"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TimeInFly}" FontSize="12" Foreground="#7f8c8d" HorizontalAlignment="Center"/>
                                    <Path Data="M0,5 L50,5" Stretch="Uniform" Stroke="#bdc3c7" StrokeThickness="2" Margin="5,2" Width="80"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="10,0,0,5">
                                    <TextBlock Text="Прилет" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding ArrivalTime}" FontSize="16" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding DateToFly}" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding ToAiroport}" FontSize="12" Foreground="#7f8c8d"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,5">
                                    <TextBlock Text="Пассажир" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding Fio}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding PassportData}" FontSize="11" Foreground="#7f8c8d" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,10,0,5" HorizontalAlignment="Right">
                                    <TextBlock Text="Багаж" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding Baggage}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                </StackPanel>

                                <Rectangle Grid.Row="3" Grid.ColumnSpan="3" Height="1" Fill="#ecf0f1" Margin="0,5"/>

                                <StackPanel Grid.Row="4" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                    <TextBlock Text="Стоимость: " FontSize="12" Foreground="#7f8c8d" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Cost, StringFormat='{}{0} ₽'}" FontSize="18" FontWeight="Bold" Foreground="#27ae60"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </DockPanel>
</Window>